%div
    = render :partial => 'universities/university_dropdown'
    -#= render partial: 'shared/new_button', locals: {new_name: "Add New University", path: students_path}
    = link_to 'Add New University', new_university_path(:student_id => @student_id)
    
%div{:class => 'form-group'}
    = label :grad_schools, :applied, 'Applied?'
    = check_box("grad_schools","applied",{:checked => @grad_schools.applied} ,"true","false")
        
%div{:class => 'form-group'}
    = label :grad_schools, :accepted, 'Accepted?'
    = check_box("grad_schools","accepted",{:checked => @grad_schools.accepted} ,"true","false")
    
%div{:class => 'form-group'}
    = label :grad_schools, :graduated, 'Graduated?'
    = check_box("grad_schools","graduated",{:checked => @grad_schools.graduated} ,"true","false")
    
%div{:class => 'form-group'}
    = label :grad_schools, :status, 'Status'
    = text_field :grad_schools, :status, :class => 'form-control'

    
%div{:class => 'form-group'}
    = label :grad_schools, :higher_degree_type, 'Type'
    = collection_select(:grad_schools, :higher_degree_type, DegreeType.all.order(:name), :id, :name)
%div{:class => 'form-group'}
    = label :grad_schools, :higher_degree_name, 'Degree Name'
    = text_field :grad_schools, :higher_degree_name,:required => true, :class => 'form-control'