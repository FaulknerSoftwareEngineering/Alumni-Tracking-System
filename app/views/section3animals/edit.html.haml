        = label :section3animal, :other_helpful_info, @section3animaltext[8].text_value
        = text_area :section3animal, :other_helpful_info, :class => 'form-control'
        
    %div{:class => 'form-group'}
        = submit_tag "Submit", :class => 'btn btn-primary'
    
    