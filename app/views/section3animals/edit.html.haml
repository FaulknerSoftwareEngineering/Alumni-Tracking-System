    %div{:class => 'form-group'}
        = label :section3animal, :ethical_care_in_altered_conditions, @section3animaltext[2].text_value
        = text_area :section3animal, :ethical_care_in_altered_conditions, :class => 'form-control'
        
    %div{:class => 'form-group'}
        = label :section3animal, :protect_humans, @section3animaltext[3].text_value
        = text_area :section3animal, :protect_humans, :class => 'form-control'
    
    %div{:class => 'form-group'}
        = label :section3animal, :justification_for_animals, @section3animaltext[4].text_value
        = text_area :section3animal, :justification_for_animals, :class => 'form-control'
        
