%h2 Create New Degree Type

= form_tag degree_types_path, :method => :post do
  %div{:class => 'form-group'}
    = label :degree_type, :title, 'Name'
    = text_field :degree_type, :required => true, :name, :class => 'form-control'
  
  %div{:class => 'form-group'}
    = submit_tag 'Save Changes', :class => 'btn btn-primary'
    
%p
  = render partial: 'shared/cancel_button', locals: {path: degree_types_path}