= form_tag department_path(@department), :method => :put do

  %div{:class => 'form-group'}
    = render :partial => 'departments_form_fields'
  %div{:class => 'form-group'}
    = label :college_id, :title, 'Faulkner College'
    = select_tag 'college_id', options_for_select(@colleges.collect{ |u| [u.name, u.id] }, selected: @default_college)

  %div{:class => 'form-group'}
    = submit_tag 'Save Changes', :class => 'btn btn-primary'
  
  
%p
  = render partial: 'shared/cancel_button', locals: {path: department_path(@department)}
%p
  = render partial: 'shared/back_to_list_button', locals: {list_name: "Department", path: departments_path}