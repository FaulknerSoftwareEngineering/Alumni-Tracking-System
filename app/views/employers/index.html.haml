%h1 All Employers

%table#employers.table
    %thead
        %tr
            %th Employer Name
            %th Edit
    %tbody
        - @employers.each do|employer|
            %tr
                %td= employer.name
                %td= link_to "Edit #{employer.name}", edit_employer_path(employer)


%p
    = render partial: 'shared/new_button', locals: {new_name: "Employer", path: new_employer_path}
%p
    = render partial: 'shared/home_page_button'