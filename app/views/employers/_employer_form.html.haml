-#Employer detail form partial

- unless @employer.errors.empty?
    #warning
        Errors prevented this movie from being #{controller.action_name}d :
        %ul
            - @employer.errors.full_messages.each do |error|
                %li = error
%div{:class => 'form-group'}
    = label :employer, :name, 'Name'
    = text_field :employer, :name, :required => true, :class => 'form-control'
    
%div{:class => 'form-group'}
    = label :employer, :contact_name, 'Contact Name'
    = text_field :employer, :contact_name, :class => 'form-control'

%div{:class => 'form-group'}  
    = label :employer, :number, 'Phone Number'
    = text_field :employer, :number, :type => "tel", :class => 'form-control'
   
%div{:class => 'form-group'}    
    = label :employer, :email, 'Email'
    = text_field :employer, :email, :type => "email", :class => 'form-control'

%div{:class => 'form-group'}
    = submit_tag 'Save Changes', :class => 'btn btn-primary'
    